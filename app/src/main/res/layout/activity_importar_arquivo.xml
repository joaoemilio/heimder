<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"  xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    tools:context="com.heimder.ImportarArquivoActivity"
    >

    <TextView
        android:text="Importar Arquivo"
        android:id="@+id/textView2"
        style="@style/HeimderTitle"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Escolher Arquivo"
        android:id="@+id/buttonEscolherArquivo" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:id="@+id/editTextImportarArquivoPath" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Importar Contatos"
        android:id="@+id/buttonImportar" />
</LinearLayout>
